{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "prettier",
        "google"
    ],

    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "comma-dangle": ["error", "never"],
        "indent": "off",
        "object-curly-spacing": ["error", "always"],
        "new-cap": 0,
        "prettier/prettier": "error",
        "quotes": [2, "double", { "avoidEscape": true }]
    }
}
